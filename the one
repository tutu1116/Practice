#冒泡排序
lis = [23,45,1,7,9,3,22,99,76,53,64,76,32,31,84,90]
def sortport():
    for i in range(len(lis)-1):
        for j in range(len(lis)-1-i):
            if lis[j]>lis[j+1]:
                lis[j],lis[j+1] = lis[j+1],lis[j]
    return lis
    
#计算X的n次方的方法
def power(x,n):
    s=1
    while n>0:
        n-=1
        s*=x
    return s
    
    
#计算a*a+b*b+c*c.....
def calc(*numbers):
    sum = 0
    for n in numbers:
        sum = sum + n*n
    return sun
    
    
#计算阶乘   n！
def fac():
    num = int(input('请输入一个数字：'))
    factorial = 1
    
    #查看数字是负数，0或者整数
    if num <0:
        print('抱歉，负数没有阶乘！')
    elif num == 0:
        print('0的阶乘是1')
    else:
        for i in range(1,num+1):
            factorial = factorial*i
        print('%d 的阶乘为 %d'(num,factorial))
def factorial (n):
    result = n
    for i in range (1,n)
        result* = i
    return result
    
def fact(n):
    if n == 1:
        return 1
    return n*fact(n-1)

print(list(set(list3)))

#随机生成验证码的两种方式


import  random
list1 = []
for i in range(65,91):
    list1.append(char(i))          #通过for循环遍历asii码追加到空列表中
for j in range(97,123):
    list1.append(char(j)) 
for k in range(48,58):
    list1.append(char(k))
ma = random.sample(list1,6)
print (ma)
ma = ''.join(ma)           #把列表转化为字符串
print(ma)




















    
    
    




    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
        
        
















    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    


    
    
    
    





    
  

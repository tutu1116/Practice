#输出某个路径下的所有文件和文件夹的路径

def print_dir():
    filepath = input('请输入一个路径：')
    if filepath == '':
        print('请输入一个正确的路径')
    else:
        for i in os.listdir(filepath):     #获取目录中的文件及子目录列表
            print(os.path.join(filepath,i)) #把路径组合起来
            
    print(print_dir())
    
#输出某个路径及其子目录下的所有文件路径

def show_dir(filepath):
    for i in os.listdir(filepath):
        path = (os.path.join(filepath,i))
        print(path)
        if os.path.isdir(path)    #isdir（）判断是否是目录
            show_dir(path)        #如果是目录  使用递归方法
            
            
#输出某个路径及其子目录下所有以HTML为后缀的文件

def print_dir(filepath):
    for i in os.listdir(filepath):
        path = os.path.join(filepath,i)
        if os.path.isdir(path):
            print(path)
        if path.endswith('.html')
            print(path)
    filepath = 'E:\PycharmProjects'#路径
    print_dir(filepath)
    
#把原字典的键值对颠倒并产生新的字典

dict1 = {'A':'a','B':'b','C':'c','D':'d','E':'e'}
dict2 = {y:x forx,y in dict1.items()}
print(dict2)

#打印九九乘法表

for i in range(1,10):
    for j in range(1,i+1):
        #print('{}x{}={}\t'.format(j,i,j*i),end='')    #通过指定end参数的值  可以取消在末尾输出的回车符，实现不换行
        print('%d x %d = %d \t '%(j,i,j*i),end='')
    print()    
    
    
    
#替换列表中的所有的3为3a
num = ['harden','lampard',3,34,45,56,67,78,89,32,33,31,13,73]
#print(num.count(3))
#print(num.index(3))
    
    for i in range(num.count(3)):    #获取3出现的次数
        ele_index = num.index(3)     #获取首次出现3 的坐标
        num[ele_index] = '3a'        #修改为3a
        print(num)

